import React, { useState, useEffect } from 'react';
import axios from 'axios'; // Hoặc import axiosClient từ file cấu hình

const UserList = () => {
  const [users, setUsers] = useState([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);

  useEffect(() => {
    const fetchData = async () => {
      try {
        setLoading(true); // Bắt đầu load
        const response = await axios.get('https://jsonplaceholder.typicode.com/users');
        setUsers(response.data); // Lưu dữ liệu
      } catch (err) {
        setError(err.message); // Lưu lỗi
      } finally {
        setLoading(false); // Kết thúc load (dù thành công hay thất bại)
      }
    };

    fetchData();
  }, []); // [] rỗng để chỉ chạy 1 lần khi mount

  if (loading) return <p>Đang tải dữ liệu...</p>;
  if (error) return <p style={{ color: 'red' }}>Lỗi: {error}</p>;

  return (
    <ul>
      {users.map(user => (
        <li key={user.id}>{user.name} - {user.email}</li>
      ))}
    </ul>
  );
};

export default UserList;